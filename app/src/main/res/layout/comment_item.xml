<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/division_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/Dark4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/division_line"
        app:layout_constraintTop_toTopOf="@id/division_line"
        tools:text="익명1"/>


    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/Dark4"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/comment_nickname"
        app:layout_constraintTop_toBottomOf="@id/comment_nickname"
        tools:text="이 강산은 내가 지키노라! 당신의 그 충정!"/>

    <TextView
        android:id="@+id/writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Dark5"
        android:textSize="9sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/comment_nickname"
        app:layout_constraintTop_toBottomOf="@id/comment"
        tools:text="08-02 18:32"/>

</androidx.constraintlayout.widget.ConstraintLayout>